<p id="notice"><%= notice %></p>
<h1>Mail Deliveries</h1>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Create Mail', new_mail_delivery_path, class: 'btn btn-lg btn-success' %>
  </div>
  <div class="col-md-12">
    <br />
    <ul class="list-group">
      <% @mail_deliveries.each do |mail_delivery| %>
        <li class="list-group-item">
          <div>
            <p>
            <strong>From</strong> <%= mail_delivery.from.name %>
          <br />
          <strong>To</strong> <%= mail_delivery.to.name %>
          </p>
          </div>
          <div class="btn-group">
            <%= link_to 'Show', mail_delivery,:class => "btn btn-primary" %>
            <%= link_to 'Edit', edit_mail_delivery_path(mail_delivery),:class => "btn btn-warning" %>
          </div>
        </li>
      <% end %>
    </ul>

  </div>
</div>
