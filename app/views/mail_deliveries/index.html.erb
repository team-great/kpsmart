<p id="notice"><%= notice %></p>

<h1>Listing Mail Deliveries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_deliveries.each do |mail_delivery| %>
      <tr>
        <td><%= link_to 'Show', mail_delivery %></td>
        <td><%= link_to 'Edit', edit_mail_delivery_path(mail_delivery) %></td>
        <td><%= link_to 'Destroy', mail_delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

