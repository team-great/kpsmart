<p id="notice"><%= notice %></p>


  <div class="jumbotron">
    <h1>Existing Routes</h1>
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @routes.each do |route| %>
            <tr>
              
              <div class="btn-group-justified">
                  <%= link_to 'Show' , route, :class => "btn btn-primary" %>
                  <%= link_to 'Edit', edit_route_path(route), :class => "btn btn-primary" %>
                  <%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-warning" %>
              </div>
              <br>
            </tr>
          <% end %>
        </tbody>
      </table>
  <div>
<br>

