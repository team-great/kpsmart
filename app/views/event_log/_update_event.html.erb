<div>
  <%= link_to "Show", route_path(event.object.item_id), class: "btn btn-default" %>
  <button class="btn btn-default" type="button" data-toggle="collapse" href="#update_<%= event.id %>"
    data-target="#update_<%= event.id %>">
    Details
  </button>
  <div class="collapse" id="update_<%= event.id %>">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Property</th>
          <th>Old Value</th>
          <th>&nbsp;</th>
          <th>New Value</th>
        </tr>
      </thead>
      <tbody>
        <% event.changeset.each do |change| %>
          <tr>
            <td>
              <%= change.first %>
            </td>
            <td>
              <%= change.last.first %>
            </td>
            <td>
              =&gt;
            </td>
            <td>
              <%= change.last.last %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
