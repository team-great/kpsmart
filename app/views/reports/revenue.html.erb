
<table class="table table-striped table-hover">
  <thead>
    <th>From</th>
    <th>To</th>
    <th>Revenue</th>
    <th>Cost</th>
    <th>Profit</th>
    <th>Mail Delivery</th>
  </thead>
  <% @mail.each do |mail| %>
    <% if (mail.profit / mail.cost) > 0.1 %>
      <tr class="success">
      <% elsif mail.profit < 0 %>
      <tr class="danger">
      <% else %>
      <tr class="">
      <% end %>

      <td><%= mail.from %></td>
      <td><%= mail.to %></td>
      <td>$<%= mail.price %></td>
      <td>$<%= mail.cost %></td>
      <td>$<%= mail.profit %></td>
      <td>
        <%= link_to "Show",  mail_delivery_url(mail.id) %>
      </td>
      </tr>
    <% end %>
</table>
